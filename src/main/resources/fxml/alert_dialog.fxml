<?xml version="1.0" encoding="UTF-8"?>

<?import javafx.geometry.Insets?>
<?import javafx.scene.control.Button?>
<?import javafx.scene.control.Label?>
<?import javafx.scene.layout.HBox?>
<?import javafx.scene.layout.VBox?>

<VBox xmlns="http://javafx.com/javafx/11.0.2"
      xmlns:fx="http://javafx.com/fxml/1"
      fx:id="root"
      fx:controller="chat.client.controller.AlertDialogController"
      spacing="10">

       <padding>
              <Insets top="15" right="15" bottom="15" left="15"/>
       </padding>

       <Label fx:id="messageLabel" wrapText="true"/>

       <HBox spacing="10" alignment="CENTER_RIGHT">
              <Button fx:id="noButton" text="Нет" onAction="#handleNo"/>
              <Button fx:id="yesButton" text="ОК" onAction="#handleYes"/>
       </HBox>
</VBox>