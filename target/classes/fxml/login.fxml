<?xml version="1.0" encoding="UTF-8"?>

<?import javafx.geometry.Insets?>
<?import javafx.scene.control.Button?>
<?import javafx.scene.control.Label?>
<?import javafx.scene.control.PasswordField?>
<?import javafx.scene.control.TextField?>
<?import javafx.scene.layout.VBox?>
<?import javafx.scene.text.Font?>

<VBox alignment="CENTER" spacing="16" prefWidth="340" prefHeight="320" 
      xmlns="http://javafx.com/javafx/11.0.2" 
      xmlns:fx="http://javafx.com/fxml/1" 
      fx:controller="chat.client.controller.LoginController"
      style="-fx-background-color: #0f172a;
             -fx-background-radius: 16;
             -fx-border-color: #334155;
             -fx-border-width: 1;
             -fx-border-radius: 16;
             -fx-effect: dropshadow(gaussian, rgba(0, 0, 0, 0.5), 20, 0, 0, 5);">
    
    <padding>
        <Insets top="28" right="28" bottom="28" left="28"/>
    </padding>

    <Label text="CHAT APP" 
           style="-fx-font-weight: 800; 
                  -fx-font-size: 24px;
                  -fx-text-fill: #ffffff;
                  -fx-padding: 0 0 8 0;
                  -fx-effect: dropshadow(gaussian, rgba(56, 189, 248, 0.3), 0, 0, 0, 1);"/>

    <Label text="ВХОД В СИСТЕМУ" 
           style="-fx-text-fill: #94a3b8; 
                  -fx-font-size: 11px;
                  -fx-font-weight: 600;
                  -fx-letter-spacing: 1px;
                  -fx-padding: 0 0 4 0;"/>

    <VBox spacing="8" style="-fx-padding: 16 0 0 0;">
        <Label text="Логин" 
               style="-fx-text-fill: #cbd5e1; 
                      -fx-font-size: 12px;
                      -fx-font-weight: 600;"/>
        
        <TextField fx:id="loginField" promptText="username"
                   style="-fx-background-color: #1e293b;
                          -fx-background-radius: 10;
                          -fx-border-color: #334155;
                          -fx-border-width: 1;
                          -fx-border-radius: 10;
                          -fx-padding: 12 16;
                          -fx-font-size: 14px;
                          -fx-text-fill: #f8fafc;
                          -fx-prompt-text-fill: #64748b;"/>
    </VBox>

    <VBox spacing="8">
        <Label text="Пароль" 
               style="-fx-text-fill: #cbd5e1; 
                      -fx-font-size: 12px;
                      -fx-font-weight: 600;"/>
        
        <PasswordField fx:id="passwordField" promptText="••••••••"
                       style="-fx-background-color: #1e293b;
                              -fx-background-radius: 10;
                              -fx-border-color: #334155;
                              -fx-border-width: 1;
                              -fx-border-radius: 10;
                              -fx-padding: 12 16;
                              -fx-font-size: 14px;
                              -fx-text-fill: #f8fafc;
                              -fx-prompt-text-fill: #64748b;"/>
    </VBox>

    <VBox spacing="10" style="-fx-padding: 20 0 0 0;">
        <Button text="ВОЙТИ" onAction="#handleLogin" defaultButton="true" maxWidth="Infinity"
                style="-fx-background-color: linear-gradient(to right, #0ea5e9, #3b82f6);
                       -fx-background-radius: 10;
                       -fx-text-fill: white;
                       -fx-font-weight: 700;
                       -fx-font-size: 14px;
                       -fx-padding: 14;
                       -fx-cursor: hand;
                       -fx-effect: dropshadow(gaussian, rgba(14, 165, 233, 0.3), 10, 0, 0, 2);"/>
        
        <Button text="РЕГИСТРАЦИЯ" onAction="#handleRegister" maxWidth="Infinity"
                style="-fx-background-color: transparent;
                       -fx-background-radius: 10;
                       -fx-text-fill: #94a3b8;
                       -fx-font-weight: 600;
                       -fx-font-size: 13px;
                       -fx-padding: 12;
                       -fx-border-color: #334155;
                       -fx-border-width: 1;
                       -fx-border-radius: 10;
                       -fx-cursor: hand;"/>
    </VBox>
    
    <style>
        .button:hover {
            -fx-scale-x: 1.02;
            -fx-scale-y: 1.02;
            -fx-transition: all 0.2s;
        }
        
        .button:pressed {
            -fx-scale-x: 0.98;
            -fx-scale-y: 0.98;
        }
        
        .text-field:focused {
            -fx-border-color: #0ea5e9;
            -fx-effect: dropshadow(gaussian, rgba(14, 165, 233, 0.2), 10, 0, 0, 0);
        }
        
        .password-field:focused {
            -fx-border-color: #0ea5e9;
            -fx-effect: dropshadow(gaussian, rgba(14, 165, 233, 0.2), 10, 0, 0, 0);
        }
    </style>
</VBox>