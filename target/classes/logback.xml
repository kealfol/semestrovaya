<configuration>

    <!-- 1. Вывод в консоль (Сюда летит всё: и инфо, и ошибки) -->
    <appender name="STDOUT" class="ch.qos.logback.core.ConsoleAppender">
        <encoder>
            <pattern>%d{HH:mm:ss.SSS} [%thread] %-5level %logger{36} - %msg%n</pattern>
        </encoder>
    </appender>

    <!-- 2. Вывод в файл (Сюда тоже летит всё, чтобы история сохранялась) -->
    <appender name="FILE" class="ch.qos.logback.core.FileAppender">
        <file>server_logs.log</file>
        <append>true</append>
        <encoder>
            <pattern>%d{yyyy-MM-dd HH:mm:ss} [%thread] %-5level %logger{36} - %msg%n</pattern>
        </encoder>
    </appender>

    <!-- Уровень логирования: INFO (значит DEBUG сообщения не показываем, остальное показываем) -->
    <root level="INFO">
        <appender-ref ref="STDOUT" />
        <appender-ref ref="FILE" />
    </root>

</configuration>